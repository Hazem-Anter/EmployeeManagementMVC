@using WebApp2.BLL.ModelVM.Employee
@model DeleteEmployeeVM

<div class="d-flex justify-content-center align-items-center min-vh-100" style="backdrop-filter: blur(8px);">
    <div class="card shadow-lg p-4 rounded-4 glass-card" style="width: 480px;">
        <div class="card-body text-center">

            <h3 class="card-title mb-4 fw-bold text-danger">
                🗑️ @SharedLocalizer["Delete"]
            </h3>

            <p class="text-light-50 mb-4">
                @SharedLocalizer["Are you sure you want to delete this employee?"] <strong>@SharedLocalizer["This action cannot be undone"]</strong>.
            </p>

            <form asp-action="Delete" asp-controller="Employee">
                <input type="hidden" asp-for="Id" />

                <!-- Name -->
                <div class="mb-3 text-start">
                    <label asp-for="Name" class="form-label text-light fw-semibold">@SharedLocalizer["Name"]</label>
                    <input type="text" class="form-control glass-input" asp-for="Name" disabled>
                </div>

                <!-- Salary -->
                <div class="mb-3 text-start">
                    <label asp-for="Salary" class="form-label text-light fw-semibold">@SharedLocalizer["Salary"]</label>
                    <input type="text" class="form-control glass-input" asp-for="Salary" disabled>
                </div>

                <!-- Department -->
                <div class="mb-4 text-start">
                    <label asp-for="Department" class="form-label text-light fw-semibold">@SharedLocalizer["Department"]</label>
                    <input type="text" class="form-control glass-input" asp-for="Department" disabled>
                </div>

                <!-- Buttons -->
                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="GetEmployees" asp-controller="Employee" class="btn btn-outline-light px-4">
                        ← @SharedLocalizer["Back"]
                    </a>
                    <input type="submit" value="🗑️ @SharedLocalizer["Delete"]" class="btn btn-danger px-4 shadow-sm" />
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    /* ✨ Glass card container */
    .glass-card {
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.3);
        backdrop-filter: blur(10px);
    }

    /* 🌫️ Inputs (disabled with same look) */
    .glass-input {
        background: rgba(255, 255, 255, 0.15);
        border: 1px solid rgba(255, 255, 255, 0.3);
        color: #f55;
        border-radius: 8px;
        padding: 10px 12px;
        transition: all 0.3s ease;
    }

        .glass-input:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }

    /* 🔘 Hover states */
    .btn-outline-light:hover {
        background-color: rgba(255, 255, 255, 0.2);
        color: #fff;
    }

    .btn-danger {
        transition: all 0.3s ease;
    }

        .btn-danger:hover {
            background-color: rgba(255, 0, 0, 0.8);
            transform: scale(1.05);
        }

    /* 🩶 Global text contrast */
    body {
        color: #fff;
    }

    .text-light-50 {
        color: rgba(255, 255, 255, 0.7);
    }

    /* ✅ RTL Styling: activates automatically when layout sets dir="rtl" */
    /* [dir="rtl"] body, */
    /* [dir="rtl"] .card-body,
    [dir="rtl"] .form-label, */
    [dir="rtl"] .text-start  {
        text-align: right !important;
        direction: rtl;
    }

    [dir="rtl"] .d-flex.justify-content-between {
        flex-direction: row-reverse;
    }

    [dir="rtl"] input,
    [dir="rtl"] select {
        text-align: right;
    }
</style>
